pragma solidity ^0.8.11;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";


contract GuildSplit is Initializable,PausableUpgradeable{

    using SafeMath for uint256;

    address public contractOwner;
    address public contractCreator;
    address public vGHSTAddress;
    address public guildAddress;
    string public guildName;
    uint16 public guildPercent;
    uint16 public vaultPercent;

    mapping(address => bool) public approvedUsers;


    function initialize(
        address _contractOwner,
        address _contractCreator,
        address _vGHST,
        address _guildAddress,
        address _approved,
        string calldata _guildName,
        uint16 _guildPercent,
        uint16 _vaultPercent

        ) public initializer{

        contractOwner = _contractOwner;
        contractCreator = _contractCreator;
        vGHSTAddress = _vGHST;
        guildAddress = _guildAddress;
        guildPercent = _guildPercent;
        vaultPercent = _vaultPercent;
        guildName = _guildName;

        approvedUsers[_contractOwner] = true;
        approvedUsers[_guildAddress] = true;
        approvedUsers[_approved] = true;
    }

    modifier onlyApproved() {
        _isApproved();
        _;
    }

    function _isApproved() internal view{
        require(msg.sender ==  contractOwner || approvedUsers[msg.sender], "onlyApproved");
    }

    modifier onlyOwner{
         _isOwner();
         _;
     }

     function _isOwner() internal view{
         require(msg.sender == contractOwner);
     }


    function setApproved(address _user, bool _approval) public onlyOwner{
        approvedUsers[_user] = _approval;
    }

    function setGuildAddress(address _guild) public onlyOwner{
        guildAddress = _guild; 
    }

    function setSplits(uint8 _guildPercent, uint8 _vaultPercent) public onlyOwner{
        require(_guildPercent + _vaultPercent == 1000,"Percentages must add up to 1000!");

        guildPercent = _guildPercent;
        vaultPercent = _vaultPercent;
    }


    function withdrawProfits(address[] calldata _revenueTokens) public onlyApproved{
        
        for(uint256 i = 0; i < _revenueTokens.length; i++){

            IERC20 token = IERC20(_revenueTokens[i]);
            uint256 balance = token.balanceOf(address(this));

            uint256 guildBalance = balance.mul(guildPercent).div(1000);
            uint256 vaultBalance = balance.mul(vaultPercent).div(1000);

            token.transfer(guildAddress,guildBalance);
            token.transfer(contractOwner,vaultBalance.mul(100).div(400)); 
            token.transfer(contractCreator,vaultBalance.mul(100).div(400));
            token.transfer(vGHSTAddress,vaultBalance.mul(200).div(400));

        }            
    }
}

